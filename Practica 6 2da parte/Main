        carro.acelerar();
        carro.Derecha();
        carro.frenar();
        carro.apagar();
        mistrenes.add(new Trenes("Brawa ", "Remshalden ","Negro con cafe ", 2000000));
        System.out.println("\n" + mistrenes.size());
        System.out.println(mistrenes.get(3));
        carro.encender();
        carro.acelerar();
        carro.Izquierda();
        carro.frenar();
        carro.apagar();
