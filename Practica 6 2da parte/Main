        tren.Derecha();
        tren.frenar();
        tren.apagar();
        mistrenes.add(new Trenes("Mexico ", "La paz ","Azul con negro", 15000000));
        System.out.println("\n" + mistrenes.size());
        System.out.println(mistrenes.get(1));
        carro.encender();
